<!-- HR List -->
<servlet>
  <servlet-name>AdminHrListServlet</servlet-name>
  <servlet-class>com.acme.leavemgmt.servlet.admin.AdminHrListServlet</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>AdminHrListServlet</servlet-name>
  <url-pattern>/admin/hr/list</url-pattern>
