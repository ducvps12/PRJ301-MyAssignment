<!-- HR Edit -->
<servlet>
  <servlet-name>AdminHrEditServlet</servlet-name>
  <servlet-class>com.acme.leavemgmt.servlet.admin.AdminHrEditServlet</servlet-class>
</servlet>
<servlet-mapping>
  <servlet-name>AdminHrEditServlet</servlet-name>
  <url-pattern>/admin/hr/edit</url-pattern>
</servlet-mapping>



  <!-- ===================== ERROR PAGES ===================== -->
<!-- Error pages -->
<error-page>
  <error-code>403</error-code>
  <location>/WEB-INF/views/errors/403.jsp</location>
</error-page>
<error-page>
  <error-code>404</error-code>
  <location>/WEB-INF/views/errors/404.jsp</location>
</error-page>
<error-page>
  <error-code>500</error-code>
  <location>/WEB-INF/views/errors/500.jsp</location>
</error-page>
<error-page>
  <exception-type>java.lang.Throwable</exception-type>
  <location>/WEB-INF/views/errors/500.jsp</location>
</error-page>

<!-- Bật/tắt panel debug -->
<context-param>
  <param-name>app.mode</param-name>
  <param-value>dev</param-value>  <!-- đổi 'prod' khi lên production -->
</context-param>

  <!-- ===================== SESSION ===================== -->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

</web-app>
