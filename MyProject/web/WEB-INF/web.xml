<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0"
         metadata-complete="true">

  <display-name>LeaveMgmt</display-name>

  <!-- ===== Welcome page ===== -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- ===== HEALTH CHECK ===== -->
  <servlet>
    <servlet-name>Hello</servlet-name>
    <servlet-class>com.acme.leavemgmt.web.HelloServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Hello</servlet-name>
    <url-pattern>/__health</url-pattern>
  </servlet-mapping>

  <!-- ===== AUTH / LOGIN ===== -->
  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.web.auth.AuthServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <!-- Thêm ngay dưới mapping /login hiện có -->
<servlet-mapping>
  <servlet-name>AuthServlet</servlet-name>
  <url-pattern>/auth/login</url-pattern>
</servlet-mapping>


  <!-- ===== EMPLOYEE REQUEST FLOW ===== -->
  <servlet>
    <servlet-name>RequestCreateServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.servlet.RequestCreateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestCreateServlet</servlet-name>
    <url-pattern>/request/create</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RequestListServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.servlet.RequestListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestListServlet</servlet-name>
    <url-pattern>/request/list</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RequestApproveServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.servlet.RequestApproveServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestApproveServlet</servlet-name>
    <url-pattern>/request/approve</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AgendaServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.servlet.AgendaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AgendaServlet</servlet-name>
  <url-pattern>/request/agenda</url-pattern>
  </servlet-mapping>

  <!-- ===== ADMIN AREA ===== -->
  <servlet>
    <servlet-name>AdminDashboardServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.web.admin.AdminDashboardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminDashboardServlet</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminUsersServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.web.admin.AdminUsersServlet</servlet-class>
  </servlet>
  <!-- có thể map nhiều pattern cho cùng 1 servlet-name bằng nhiều <servlet-mapping> -->
  <servlet-mapping>
    <servlet-name>AdminUsersServlet</servlet-name>
    <url-pattern>/admin/users</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminUsersServlet</servlet-name>
    <url-pattern>/admin/users/toggle</url-pattern>
  </servlet-mapping>

  <!-- ===== FILTERS ===== -->
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.acme.leavemgmt.filter.AuthFilter</filter-class>
  </filter>

  <!-- bảo vệ các trang cần đăng nhập -->
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/request/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/agenda</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/admin/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <!-- ===== SESSION ===== -->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

</web-app>
