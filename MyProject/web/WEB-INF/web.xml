<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0"
         metadata-complete="true">

  <display-name>LeaveMgmt</display-name>

  <!-- ===== Welcome page ===== -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- ===== HEALTH CHECK ===== -->
  <servlet>
    <servlet-name>Hello</servlet-name>
    <servlet-class>com.acme.leavemgmt.web.HelloServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Hello</servlet-name>
    <url-pattern>/__health</url-pattern>
  </servlet-mapping>

  <!-- ===== AUTH / LOGIN ===== -->
  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.web.auth.AuthServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/auth/login</url-pattern>
  </servlet-mapping>

  <!-- ===== EMPLOYEE REQUEST FLOW ===== -->
  <servlet>
    <servlet-name>RequestCreateServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.servlet.RequestCreateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestCreateServlet</servlet-name>
    <url-pattern>/request/create</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RequestListServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.servlet.RequestListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestListServlet</servlet-name>
    <url-pattern>/request/list</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RequestApproveServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.servlet.RequestApproveServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestApproveServlet</servlet-name>
    <url-pattern>/request/approve</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AgendaServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.servlet.AgendaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AgendaServlet</servlet-name>
    <url-pattern>/request/agenda</url-pattern>
  </servlet-mapping>

  <!-- ===== ADMIN AREA ===== -->
  <servlet>
    <servlet-name>AdminDashboardServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.servlet.admin.AdminDashboardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminDashboardServlet</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminUsersServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.servlet.admin.AdminUsersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminUsersServlet</servlet-name>
    <url-pattern>/admin/users</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminUsersServlet</servlet-name>
    <url-pattern>/admin/users/toggle</url-pattern>
  </servlet-mapping>

  <!-- ===== REQUEST DETAIL / CANCEL ===== -->
  <servlet>
    <servlet-name>RequestDetail</servlet-name>
    <servlet-class>com.acme.leavemgmt.servlet.RequestDetailServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestDetail</servlet-name>
    <url-pattern>/request/detail</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RequestCancel</servlet-name>
    <servlet-class>com.acme.leavemgmt.servlet.RequestCancelServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RequestCancel</servlet-name>
    <url-pattern>/request/cancel</url-pattern>
  </servlet-mapping>

  <!-- ===== FILTERS ===== -->
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.acme.leavemgmt.filter.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>RoleFilter</filter-name>
    <filter-class>com.acme.leavemgmt.filter.RoleFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>RoleFilter</filter-name>
    <url-pattern>/admin/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>RoleFilter</filter-name>
    <url-pattern>/request/approve</url-pattern>
  </filter-mapping>

  <!-- ===== ERROR PAGES (khuyến nghị) ===== -->
  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/views/errors/403.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/views/errors/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/views/errors/500.jsp</location>
  </error-page>

  <!-- ===== SESSION ===== -->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>




<!-- Profile -->
<servlet>
  <servlet-name>ActivityDAO</servlet-name>
  <servlet-class>com.acme.leavemgmt.dao.ActivityDAO</servlet-class>
  <load-on-startup>2</load-on-startup>
</servlet>

<servlet-mapping>
  <servlet-name>ActivityDAO</servlet-name>
  <url-pattern>/activity</url-pattern>
</servlet-mapping>




<!-- Profile -->
<servlet>
  <servlet-name>ProfileServlet</servlet-name>
  <servlet-class>com.acme.leavemgmt.servlet.ProfileServlet</servlet-class>
  <load-on-startup>2</load-on-startup>
</servlet>

<servlet-mapping>
  <servlet-name>ProfileServlet</servlet-name>
  <url-pattern>/profile</url-pattern>
</servlet-mapping>




<servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.acme.leavemgmt.servlet.LogoutServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
</servlet-mapping>





</web-app>
